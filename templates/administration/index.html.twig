{% extends 'base.html.twig' %}

{% block title %}SymfonyChat: Administration{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}

    <div class="container mt-5">
        <div class="title">
            <h3>Administration</h3>
            <p>Welcome to the Administration Panel.</p>
        </div>
        <div class="content mt-4">
            <div class="actions">
                <a href="{{ path('app_admin_users') }}" class="btn btn-outline-success"><i class="fas fa-list me-2"></i>User list</a>
                <a href="{{ path('app_admin') }}" class="btn btn-outline-warning ms-2"><i class="fas fa-warning me-2"></i>Violations</a>
                <a href="{{ path('app_admin') }}" class="btn btn-outline-danger ms-2"><i class="fas fa-ban me-2"></i>Terminations</a>
                <a href="{{ path('app_admin') }}" class="btn btn-outline-danger ms-2"><i class="fas fa-terminal me-2"></i>Potential TOS Violations</a>
            </div>
            <hr/>
            <div class="latestUser">
                <div class="title">
                    <h4>Latest user that joined</h4>
                </div>
                <div class="box bg-body-tertiary d-inline-block rounded border mt-2">
                    <img class="rounded" src="{{ asset('assets/images/profilePicture.png') }}" height="50px" width="50px" alt="profilePicture" />
                    <span class="mb-0 pe-3 ms-2">Aaron Bidzan</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}