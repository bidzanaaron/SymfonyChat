{% extends 'base.html.twig' %}

{% block body %}
    {{ include('header.html.twig') }}

    <div class="container mt-5">
        <div class="title mb-4 d-flex align-items-center">
            <a class="bg-dark-subtle rounded-5 d-flex align-items-center justify-content-center text-white border me-3" style="width: 40px; height: 40px;" href="{{ path('app_terms') }}"><i class="fas fa-arrow-left"></i></a>
            <h1 class="mb-0">Contact Us</h1>
        </div>
        <div class="contact">
            <div class="row">
                <div class="col-md-6">
                    <form>
                        <div class="form-group mb-2">
                            <label class="mb-1" for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="form-group mb-2">
                            <label class="mb-1" for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="form-group mb-3">
                            <label class="mb-1" for="message">Message:</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

                <div class="col-md-6">
                    <h4>Contact Information:</h4>
                    <p>Email: support@symfonychat.com</p>
                    <p>Phone: +1 (555) 123-4567</p>
                    <p>Address: 123 Main Street, Cityville, State, Zip</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}